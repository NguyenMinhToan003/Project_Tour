header#header
  .header-controler 
    each title in ["Thinks to do","Travel guide","Tour"]
      input(type="button",name=title,value=title)
    .header-closed 
      img(src="../image/icon-x.svg",alt="icon-close")
.checkbox-rect
    input#checkbox-rect1(type="checkbox", name="check")
    label(for="checkbox-rect1") Check one
main#main
  section.search 
    h3.search-title Search location or property
    form(action="").search-form 
      input(type="search", placeholder="Search location or property").search-input
      .search-icon 
        img(src="../image/search.png", alt="icon-search")
    each title in ["Show side trips","Show items in my trips"]
      .search-show
        input(type="radio" name="show" value=title) 
        span.search-show-title= title 


    form(action="").search-choose-title|Activity type
     each title in["Hidden Gems","Shopping","Historic Sites","Nightlife","Tours","Outdoors","U Museums","Parks","Tours","Outdoors","U Museums","Parks"]
      .search-choose
        input(type="checkbox" name="choose" value=title) 
        span.search-show-title= title
